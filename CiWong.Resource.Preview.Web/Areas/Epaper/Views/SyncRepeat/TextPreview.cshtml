}

<div id="_article_panel" data-bind="with: entity">
    <h1 class="topTit" data-bind="html:name"></h1>
    <div class="boxMain">
        <div class="newsBox">
            <!-- ko foreach:$data.sections -->
            <!--ko foreach:sentences-->
