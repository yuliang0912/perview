@{
	Layout = "~/Views/Shared/_Layout.cshtml";

	var baseParam = ViewBag.baseParam as WorkParam;

	ViewBag.Title = ViewBag.Title ?? "电子书_作业_" + baseParam.WorkResource.ResourceName;
}

@section header{
	@Html.Styles("default/css", "bookstyle.css?t=20141121")
	@Html.Styles("question/css", "question.css?t=20141121")
}
<div class="mainwrap">
	<div class="commend-listwrap">
		<header class="work-Header badHead" id="_ebook_top">
			<hgroup class="area"><h1></h1></hgroup>
		</header>
		<p class="loading-content tc" id="nw_loading">
			<img src="/content/default/images/enter-loading.gif" alt="loading..." />
			<span>请稍等，正在加载中......</span>
		</p>
		@RenderBody()
		<div class="contrlBox">
			<a href="javascript:;" class="goUp"></a>
		</div>
	</div>
</div>
@RenderSection("scripts", false)
<script type="text/javascript">
	$('a.goUp').live("click", function () {
		$('html,body').animate({ scrollTop: 0 }, 300);
	});
</script>
